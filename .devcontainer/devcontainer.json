{
	"name": "Theia Cloud",
	"dockerFile": "Dockerfile",
	"context": "..",
	"remoteUser": "theia",
	"workspaceFolder": "/project",
	"workspaceMount": "source=${localWorkspaceFolder},target=/project,type=bind,consistency=delegated",
	"runArgs": ["--hostname", "theia"], // Updated for better readability
	"remoteEnv": {
		"FLASK_DEBUG": "true",
		"FLASK_APP": "service:app",
		"PYTHONIOENCODING": "utf-8"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"VisualStudioExptTeam.vscodeintellicode",
				"ms-python.python",
				"ms-python.vscode-pylance",
				"CucumberOpen.cucumber-official",
				"yzhang.markdown-all-in-one",
				"bierner.markdown-preview-github", // Changed extension ID to the correct one
				"hnw.vscode-auto-open-markdown-preview",
				"DavidAnson.vscode-markdownlint",
				"donjayamanne.githistory",
				"GitHub.vscode-pull-request-github",
				"hbenl.vscode-test-explorer",
				"njpwerner.autodocstring",
				"cstrap.flask-snippets",
				"wholroyd.jinja",
				"redhat.vscode-yaml",
				"ms-azuretools.vscode-docker",
				"streetsidesoftware.code-spell-checker"
			]
		}
	},
	"postCreateCommand": "pip install --no-cache-dir -r requirements.txt", // Uncommented and added `--no-cache-dir` for efficiency
	"features": {
		"docker-in-docker": "latest"
	}
}
